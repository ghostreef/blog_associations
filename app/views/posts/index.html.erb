<% title 'Posts' %>
<h3>Posts</h3>

<%= link_to 'New Post', new_post_path %>
<table>
  <thead>
  <tr>
    <th>id</th>
    <th>title</th>
    <th>text</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to('show',post_path(post)) %></td>
      <td><%= link_to('edit', edit_post_path(post)) %></td>
      <td><%= link_to('delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } )%></td>
    </tr>
  <% end %>
  </tbody>
</table>
